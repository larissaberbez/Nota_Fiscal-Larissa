  total = v_p1*qtd_p1 + v_p2*qtd_p2 + v_p3*qtd_p3 + v_p4*qtd_p4 + v_p5*qtd_p5 + v_p6*qtd_p6 + v_p7*qtd_p7 + v_p8*qtd_p8;
  
