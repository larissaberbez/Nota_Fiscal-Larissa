  printf("Quantidade do Produto: ");   
  scanf("%d", &qtd_p3);   
  fflush(stdin);      
  
  printf("\nNome do Produto: ");   
  gets(P_4);   
  printf("Valor do Produto: ");   
  scanf("%f", &v_p4);   
  printf("Quantidade do Produto: ");   
  scanf("%d", &qtd_p4); 
  fflush(stdin);      
  
  printf("\nNome do Produto: ");   
  gets(P_5);   
  printf("Valor do Produto: ");   
  scanf("%f", &v_p5);   
  printf("Quantidade do Produto: ");   
  scanf("%d", &qtd_p5);   
